<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listview_height">
    <ImageView
        android:id="@+id/IMG_playing"
        android:layout_width="@dimen/listview_height"
        android:layout_height="match_parent"
        android:src="@android:drawable/ic_media_play"/>
    <TextView
        android:id="@+id/TV_party_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:text="@string/default_partyname"
        android:layout_toRightOf="@id/IMG_playing"
        android:textSize="@dimen/listview_textSize"
        android:gravity="center_vertical"
        />
</RelativeLayout>