<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/listview_height">
    <TextView
        android:id="@+id/thematic_initial"
        android:layout_width="@dimen/listview_height"
        android:layout_height="match_parent"
        android:background="@color/holo_blue_dark"
        android:text="@string/default_thematic_initial"
        android:gravity="center"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/listview_textSize"
        />
    <TextView
        android:id="@+id/thematic_party_number"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/listview_textSize"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_margin="5dp"
        android:text="@string/default_thematic_party_number"/>
    <TextView
        android:id="@+id/thematic_name"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/listview_textSize"
        android:gravity="center_vertical"
        android:text="@string/default_thematic"
        android:layout_toRightOf="@id/thematic_initial"
        android:layout_toLeftOf="@id/thematic_party_number"
        />

</RelativeLayout>